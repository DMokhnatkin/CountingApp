<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountingApp.Views.CreatePurchasePage">
    <ScrollView>
        <StackLayout Margin="20">
            <Label Text="Contributors" FontAttributes="Bold" HorizontalOptions="Center" />
            <Picker Title="Select a contributors" ItemsSource="{Binding Contributors}" ItemDisplayBinding="{Binding DisplayName}" />
            <Label Text="Description" FontAttributes="Bold" HorizontalOptions="Center" />
            <Editor />
        </StackLayout>
    </ScrollView>
</ContentPage>