<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountingApp.Views.TransactionsPage"
             Title="Транзакции">
    <StackLayout>
        <ListView ItemsSource="{Binding Transactions}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label>Транзакции</Label>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackLayout VerticalOptions="End" Orientation="Horizontal">
            <Button Image="ic_shopping_cart_black_24dp.png" BackgroundColor="Transparent" Clicked="AddPurchase_OnClicked" BorderColor="Transparent"/>
        </StackLayout>
    </StackLayout>
</ContentPage>